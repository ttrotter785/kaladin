<% if current_user %>
  Welcome <%= current_user.name %>!<br>
  Username <%= current_user.nickname %><br>
  Token <%= current_user.token %><br>
  Secret <%= current_user.secret %><br>
  <%= link_to "Sign Out", logout_path %>
  
  <%= form_tag get_friends_path do %>
		<%= submit_tag("Show My Friends!", id: "show_friends_button") %>
	<% end %>
<% else %>
  <%= link_to "Sign in with Twitter", "/auth/twitter" %>
<% end %>